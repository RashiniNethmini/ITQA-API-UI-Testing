{
  "compilerOptions": {
    "target": "ES2022", // Or a more recent version if needed
    "module": "commonjs", 
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ESNext"] // Explicitly include ESNext libraries
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

